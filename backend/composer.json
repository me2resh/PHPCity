{
    "name": "phpcity/backend",
    "description": "Backend parser for PHPCity visualization - extracts PHP project structure for 3D city visualization",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Adrian Huna",
            "email": "original@author.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-ast": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "PHPCity\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PHPCity\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse"
    },
    "config": {
        "sort-packages": true
    }
}